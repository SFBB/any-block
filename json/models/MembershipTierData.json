{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/MembershipTierData",
    "definitions": {
        "MembershipTierData": {
            "properties": {
                "id": {
                    "type": "integer",
                    "description": "this is a unique ID of the tier you should hardcode this in your app and provide icon, graphics, etc for each tier  (even for old/historical/inactive/hidden tiers)"
                },
                "name": {
                    "type": "string",
                    "description": "localazied name of the tier"
                },
                "description": {
                    "type": "string",
                    "description": "just a short technical description you don't have to use it, you can use your own UI-friendly texts"
                },
                "isTest": {
                    "type": "boolean",
                    "description": "is this tier for debugging only?"
                },
                "periodType": {
                    "enum": [
                        "PeriodTypeUnknown",
                        0,
                        "PeriodTypeUnlimited",
                        1,
                        "PeriodTypeDays",
                        2,
                        "PeriodTypeWeeks",
                        3,
                        "PeriodTypeMonths",
                        4,
                        "PeriodTypeYears",
                        5
                    ],
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "integer"
                        }
                    ],
                    "title": "Period Type"
                },
                "periodValue": {
                    "type": "integer",
                    "description": "i.e. \"5 days\" or \"3 years\""
                },
                "priceStripeUsdCents": {
                    "type": "integer",
                    "description": "this one is a price we use ONLY on Stripe platform"
                },
                "anyNamesCountIncluded": {
                    "type": "integer",
                    "description": "number of ANY NS names that this tier includes  also in the \"features\" list (see below)"
                },
                "anyNameMinLength": {
                    "type": "integer",
                    "description": "somename.any - is of len 8"
                },
                "features": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array",
                    "description": "localized strings for the features"
                },
                "colorStr": {
                    "type": "string",
                    "description": "green, blue, red, purple, custom"
                }
            },
            "additionalProperties": true,
            "type": "object",
            "title": "Membership Tier Data"
        }
    }
}